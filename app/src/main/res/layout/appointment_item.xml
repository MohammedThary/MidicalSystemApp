<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="40dp"
    app:cardMaxElevation="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/profile_icon"
                android:padding="3dp"
                android:text="doctor name"

                android:textColor="@color/black"

                android:textDirection="rtl"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/doctor_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/profile_icon"
                android:padding="3dp"
                android:text="doctor speciality"
                android:textColor="@color/black"

                android:textDirection="rtl"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/clinic_name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/clinic_icon"
                android:padding="3dp"
                android:text="clinic name"
                android:textColor="@color/black"

                android:textDirection="rtl"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/clinic_location"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/clinic_icon"
                android:padding="3dp"
                android:text="clinic location"
                android:textColor="@color/black"

                android:textDirection="rtl"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/time_icon"
                    android:padding="3dp"
                    android:text="time"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/day"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/day_icon"
                    android:padding="3dp"
                    android:text="اليوم"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/teal_700"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:drawableRight="@drawable/delete_icon"
                android:text="حذف"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/delete_icon"
                android:text="تعديل"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>